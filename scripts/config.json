{
  "content_sync": {
    "source_dir": "public/documents",
    "output_dir": "src/content",
    "metadata_file": "content_metadata.json",
    "auto_backup": true,
    "backup_dir": "backup",
    "file_extensions": [".docx"],
    "encoding": "utf-8"
  },
  "format_optimizer": {
    "content_dir": "src/content",
    "output_dir": "src/pages",
    "auto_add_emoji": true,
    "auto_generate_summary": true,
    "add_interactive_elements": true,
    "add_visual_elements": true,
    "add_navigation": true,
    "add_styles": true,
    "preserve_original_content": true
  },
  "workflow": {
    "default_mode": "full",
    "enable_logging": true,
    "log_level": "INFO",
    "parallel_processing": false,
    "max_workers": 4,
    "timeout": 300
  },
  "emoji_mapping": {
    "认知": "🧠",
    "智慧": "🧠",
    "世界": "🌍",
    "规律": "📊",
    "行动": "⚡",
    "执行": "🎯",
    "心理": "😌",
    "风险": "⚠️",
    "管理": "📋",
    "历史": "📚",
    "多倍": "🚀",
    "股票": "📈",
    "筛选": "🔍",
    "策略": "🎯",
    "交易": "💹",
    "工具": "🛠️",
    "资源": "📚",
    "案例": "📖",
    "复盘": "🔍",
    "系统": "⚙️",
    "实战": "🎯",
    "指南": "📋",
    "附录": "📚",
    "总结": "💎"
  },
  "style_templates": {
    "example_box": {
      "background": "linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%)",
      "border": "1px solid #2196f3",
      "border_radius": "12px",
      "padding": "1.5rem",
      "margin": "1.5rem 0"
    },
    "tip_box": {
      "background": "linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%)",
      "border": "1px solid #4caf50",
      "border_radius": "12px",
      "padding": "1.5rem",
      "margin": "1.5rem 0"
    },
    "warning_box": {
      "background": "linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%)",
      "border": "1px solid #ff9800",
      "border_radius": "12px",
      "padding": "1.5rem",
      "margin": "1.5rem 0"
    }
  },
  "navigation": {
    "enable_top_nav": true,
    "enable_bottom_nav": true,
    "show_back_to_top": true,
    "show_progress_bar": true,
    "nav_links": {
      "home": "/",
      "preface": "/000_Preface_CN",
      "chapter1": "/001_Chapter1_Know_Yourself_and_the_World_CN"
    }
  },
  "validation": {
    "check_links": true,
    "check_images": true,
    "check_metadata": true,
    "validate_markdown": true,
    "max_file_size": "10MB"
  },
  "notifications": {
    "enable_email": false,
    "enable_desktop": true,
    "success_message": "✅ 更新完成！",
    "error_message": "❌ 更新失败，请检查日志"
  }
} 