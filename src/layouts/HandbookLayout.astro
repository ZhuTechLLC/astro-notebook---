---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  book: 'theory' | 'macro' | 'stocks' | 'technical' | 'quantitative';
  chapter?: string;
  lang?: string;
  alt?: string;
}

const { title, book, chapter = '', lang = 'zh-CN', alt = '' } = Astro.props;
---

<Layout 
  title={title} 
  currentBook={book} 
  currentChapter={chapter}
  lang={lang}
  alt={alt}
>
  <slot />
</Layout>