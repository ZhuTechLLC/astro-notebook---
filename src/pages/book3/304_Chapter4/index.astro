---
import Layout from '/src/layouts/HandbookLayout.astro';

const chapterData = {
  title: "第4章 估值模型构建与应用",
  description: "构建专业的DCF估值模型，进行全面的相对估值分析",
  learningObjectives: [
    "掌握DCF模型构建方法",
    "理解相对估值分析框架",
    "进行敏感性分析",
    "综合评估投资价值"
  ],
  coreConcepts: [
    "现金流折现",
    "终值计算",
    "相对估值",
    "敏感性分析",
    "投资价值评估"
  ],
  analysisTools: [
    "DCF模型模板",
    "可比公司分析",
    "敏感性分析工具",
    "情景分析",
    "估值区间计算"
  ],
  sections: [
    {
      title: "4.1 DCF模型详细构建",
      description: "构建Broadcom的DCF估值模型，包括现金流预测和折现率确定",
      path: "/book3/304_Chapter4/4.1_DCF_Model_Construction_CN"
    },
    {
      title: "4.2 相对估值详细分析",
      description: "进行全面的相对估值分析，包括PE、PB、EV/EBITDA等指标",
      path: "/book3/304_Chapter4/4.2_Relative_Valuation_CN"
    }
  ]
};
---

<Layout title={chapterData.title} description={chapterData.description}>
  <div class="chapter-container">
    <div class="chapter-header">
      <h1>{chapterData.title}</h1>
      <p class="chapter-description">{chapterData.description}</p>
    </div>

    <div class="learning-objectives">
      <h2>📚 学习目标</h2>
      <div class="objectives-grid">
        {chapterData.learningObjectives.map((objective, index) => (
          <div class="objective-card">
            <div class="objective-number">{index + 1}</div>
            <p>{objective}</p>
          </div>
        ))}
      </div>
    </div>

    <div class="core-concepts">
      <h2>🎯 核心概念</h2>
      <div class="concepts-grid">
        {chapterData.coreConcepts.map(concept => (
          <div class="concept-card">
            <span>{concept}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="analysis-tools">
      <h2>🛠️ 分析工具</h2>
      <div class="tools-grid">
        {chapterData.analysisTools.map(tool => (
          <div class="tool-card">
            <span>{tool}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="chapter-sections">
      <h2>📖 章节内容</h2>
      <div class="sections-grid">
        {chapterData.sections.map((section, index) => (
          <a href={section.path} class="section-card">
            <div class="section-number">{index + 1}</div>
            <div class="section-content">
              <h3>{section.title}</h3>
              <p>{section.description}</p>
            </div>
            <div class="section-arrow">→</div>
          </a>
        ))}
      </div>
    </div>

    <div class="chapter-navigation">
      <a href="/book3/303_Chapter3/" class="nav-button prev">
        ← 第3章 财务分析与估值模型
      </a>
      <a href="/book3/305_Chapter5/" class="nav-button next">
        第5章 投资策略与操作实务 →
      </a>
    </div>
  </div>
</Layout>

<style>
  .chapter-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .chapter-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .chapter-header h1 {
    font-size: 2.5rem;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .chapter-description {
    font-size: 1.2rem;
    color: var(--color-text-light);
    max-width: 800px;
    margin: 0 auto;
  }

  .learning-objectives,
  .core-concepts,
  .analysis-tools,
  .chapter-sections {
    margin-bottom: 3rem;
  }

  .learning-objectives h2,
  .core-concepts h2,
  .analysis-tools h2,
  .chapter-sections h2 {
    font-size: 1.8rem;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-primary);
    padding-bottom: 0.5rem;
  }

  .objectives-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .objective-card {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    transition: transform 0.2s ease;
  }

  .objective-card:hover {
    transform: translateY(-2px);
  }

  .objective-number {
    background: var(--color-primary);
    color: white;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .concepts-grid,
  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .concept-card,
  .tool-card {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .concept-card:hover,
  .tool-card:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  .sections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .section-card {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
  }

  .section-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }

  .section-number {
    background: var(--color-primary);
    color: white;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
  }

  .section-content {
    flex: 1;
  }

  .section-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .section-content p {
    margin: 0;
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .section-arrow {
    color: var(--color-primary);
    font-size: 1.2rem;
    font-weight: bold;
  }

  .chapter-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .nav-button {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .chapter-container {
      padding: 1rem;
    }

    .chapter-header h1 {
      font-size: 2rem;
    }

    .objectives-grid,
    .sections-grid {
      grid-template-columns: 1fr;
    }

    .concepts-grid,
    .tools-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }

    .chapter-navigation {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style> 